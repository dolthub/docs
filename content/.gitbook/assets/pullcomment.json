{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "DoltHub API - Add Pull Request Comment"
  },
  "servers": [
    {
      "url": "https://www.dolthub.com/api/v1alpha1"
    }
  ],
  "paths": {
    "/{owner}/{repo}/pulls/{pull_id}/comments": {
      "post": {
        "summary": "Add comment to pull request",
        "operationId": "addCommentToPullRequest",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "description": "Owner of the database",
            "required": true,
            "schema": {
              "type": "string",
              "example":"dolthub"
            }
           
          },
          {
            "name": "repo",
            "in": "path",
            "description": "database name",
            "required": true,
            "schema": {
              "type": "string",
              "example":"museum-collections"
            }
          },
          {
            "name": "pull_id",
            "in": "path",
            "description": "Pull request ID",
            "required": true,
            "schema": {
              "type": "string",
              "example":"66"
            }
          }
        ],
        "requestBody": {
          "description": "Comment to be added to pull request",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "comment": {
                    "type": "string",
                    "description": "Comment to be added to the pull request",
                    "example":"The pull request looks good!"
                  }
                },
                "required": [
                  "comment"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Status of the request",
                      "example":"Success"

                    },
                    "repository_owner": {
                      "type": "string",
                      "description": "Owner of the database",
                      "example":"dolthub"
                    },
                    "repository_name": {
                      "type": "string",
                      "description": "Database name",
                      "example":"museum-collections"
                    },
                    "pull_id": {
                      "type": "string",
                      "description": "Pull request ID",
                      "example":"66"
                    },
                    "comment": {
                      "type": "string",
                      "description": "Comment added to the pull request",
                      "example":"The pull request looks good!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. The request was invalid or could not be processed.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Error"
                    },
                    "message":{
                      "type":"string",
                      "example":"Error merging a pull request."
                    },
                    "repository_owner": {
                      "type": "string",
                      "description": "Owner of the database",
                      "example":"dolthub"
                    },
                    "repository_name": {
                      "type": "string",
                      "description": "Database name",
                      "example":"museum-collections"
                    },
                    "pull_id": {
                      "type": "string",
                      "description": "Pull request ID",
                      "example":"66"
                    },
                    "comment": {
                      "type": "string",
                      "description": "Comment added to the pull request",
                      "example":"The pull request looks good!"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "APIKeyHeader": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "authorization"
      }
    }
  }
}

